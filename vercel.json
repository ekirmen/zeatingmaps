{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build",
  "installCommand": "npm ci --prefer-offline --no-audit --no-fund --silent",
  "framework": "create-react-app",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "build": {
    "env": {
      "CI": "false",
      "GENERATE_SOURCEMAP": "false",
      "DISABLE_ESLINT_PLUGIN": "true",
      "SKIP_PREFLIGHT_CHECK": "true",
      "NODE_ENV": "production",
      "INLINE_RUNTIME_CHUNK": "false",
      "POSTCSS_CONFIG": "postcss.config.js"
    }
  },
  "rewrites": [
    {
      "source": "/store/static/:path*",
      "destination": "/static/:path*"
    },
    {
      "source": "/store/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/store/logo192.png",
      "destination": "/logo192.png"
    },
    {
      "source": "/store/logo512.png",
      "destination": "/logo512.png"
    },
    {
      "source": "/store/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/payment-success/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/backoffice/static/:path*",
      "destination": "/static/:path*"
    },
    {
      "source": "/backoffice/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/backoffice/logo192.png",
      "destination": "/logo192.png"
    },
    {
      "source": "/backoffice/logo512.png",
      "destination": "/logo512.png"
    },
    {
      "source": "/backoffice/:path*",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/404",
      "destination": "/index.html",
      "statusCode": 404
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
