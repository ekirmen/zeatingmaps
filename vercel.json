{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/store/(.*)",
      "dest": "/store/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/store/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "env": {
    "NODE_VERSION": "22.x"
  }
}
